@using Bugs.ViewModels;
@using Bugs.Models.Enums;
@model List<BugVM>;

@{
    ViewData["Title"] = "Home Page";
}

@section css{
    <link rel="stylesheet" href="~/css/index.css" />
}

@if (Model == null || Model.Count() == 0)
{
    <h1>Ошибок нет</h1>
}
else
{
    Array statusValues = Enum.GetValues(typeof(Status));
    <div class="bug-table">
        <div class="bug-header">
            <div>
                @foreach (Status st in statusValues)
                {
                    <div>@st.ToString()</div>
                }
            </div>
        </div>

        <div class="bug-body">
            @{
                foreach (Status st in statusValues)
                {
                    <div class="bug-column">
                        @{
                            IEnumerable<BugVM> list = Model.Where(m => m.Status == st);
                            foreach (BugVM bug in list)
                            {
                                <div>
                                    <div class="bug-cell" onclick="EditBug('@Url.Action("EditBug", "Home", new { bugId = bug.Id })')">
                                        <div># @bug.Id</div>
                                        <div>@bug.Name</div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                }
            }
        </div>
    </div>
}

@section Scripts{

    <environment include="Development">
        <script src="~/js/index.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/index.min.js" asp-append-version="true"></script>
    </environment>
}